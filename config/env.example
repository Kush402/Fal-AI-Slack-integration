# =============================================================================
# SLACK AI ASSET GENERATOR - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=slack-ai-asset-generator
LOG_LEVEL=info

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Google Drive Configuration
GOOGLE_DRIVE_PARENT_FOLDER_ID=your-parent-folder-id
GOOGLE_DRIVE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your-project-id
VERTEX_AI_LOCATION=us-central1
GEMINI_MODEL_NAME=gemini-1.5-pro-002

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-pro:generateContent
GEMINI_MAX_OUTPUT_TOKENS=128
GEMINI_TEMPERATURE=0.7
GEMINI_TIMEOUT=60000
GEMINI_MAX_RETRIES=3

# Fal.ai Configuration
FAL_AI_API_KEY=your-fal-ai-api-key
FAL_AI_BASE_URL=https://fal.run
FAL_AI_TIMEOUT=300000
FAL_AI_MAX_RETRIES=3
FAL_AI_RETRY_DELAY=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=slack-ai-bot:

# Session Configuration
SESSION_TIMEOUT=7200000
SESSION_CLEANUP_INTERVAL=3600000
MAX_CONCURRENT_SESSIONS=100
SESSION_STORAGE_TYPE=redis

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key-here
ALLOWED_ORIGINS=https://your-domain.com,https://slack.com

# Job Queue Configuration
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=
BULL_REDIS_DB=1
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=30000

# Asset Storage Configuration
MAX_ASSET_SIZE_MB=100
ALLOWED_ASSET_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,audio/wav
ASSET_CLEANUP_AFTER_DAYS=30

# API Configuration
API_REQUEST_TIMEOUT=30000
API_MAX_RETRIES=3
API_RETRY_DELAY=1000

# Development Configuration
DEBUG_MODE=false
ENABLE_MOCK_SERVICES=false
MOCK_FAL_AI_RESPONSES=false
MOCK_DRIVE_UPLOADS=false

# Monitoring & Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Feature Flags
ENABLE_REGENERATION=true
ENABLE_ASSET_EDITING=true
ENABLE_ASSET_UPSCALING=true
ENABLE_BATCH_PROCESSING=false
ENABLE_WEBHOOK_NOTIFICATIONS=true 