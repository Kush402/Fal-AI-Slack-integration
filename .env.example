# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Configuration
NODE_ENV=development
APP_NAME=slack-ai-asset-generator
PORT=3000
APP_VERSION=1.0.0

# Security Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters-long
ENCRYPTION_KEY=your-encryption-key-here-minimum-32-characters-long

# Slack Configuration (REQUIRED)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SOCKET_MODE=true

# Fal.ai Configuration (REQUIRED)
FAL_KEY=your-fal-ai-api-key-here
FAL_AI_BASE_URL=https://api.fal.ai
FAL_AI_TIMEOUT=30000
FAL_AI_MAX_RETRIES=3
FAL_AI_RETRY_DELAY=1000

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Google Drive Configuration (REQUIRED)
GOOGLE_DRIVE_PARENT_FOLDER_ID=your-parent-folder-id
GOOGLE_DRIVE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHARED_DRIVE_ID=your-shared-drive-id
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40project.iam.gserviceaccount.com

# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your-vertex-ai-project-id
VERTEX_AI_LOCATION=us-central1
GEMINI_MODEL_NAME=gemini-pro
VERTEX_AI_MAX_RETRIES=3
VERTEX_AI_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=dashboard:
REDIS_MAX_RETRIES=3

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=300000
MAX_CONCURRENT_SESSIONS=100
SESSION_STORAGE_TYPE=redis

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Job Queue Configuration
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=your-redis-password
BULL_REDIS_DB=1
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=1000

# Asset Configuration
MAX_ASSET_SIZE_MB=100
ALLOWED_ASSET_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav,audio/ogg
ASSET_CLEANUP_AFTER_DAYS=30

# API Configuration
API_REQUEST_TIMEOUT=30000
API_MAX_RETRIES=3
API_RETRY_DELAY=1000

# Feature Flags
ENABLE_REGENERATION=true
ENABLE_ASSET_EDITING=true
ENABLE_ASSET_UPSCALING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_WEBHOOK_NOTIFICATIONS=true
ENABLE_MOCK_SERVICES=false

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Logging Configuration
LOG_LEVEL=info
DEBUG_MODE=false
LOG_RETENTION_DAYS=7
MAX_LOG_SIZE=50m

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Mock Configuration (for testing)
MOCK_DRIVE_UPLOADS=false

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# 1. JWT_SECRET must be at least 32 characters long
# 2. ENCRYPTION_KEY must be at least 32 characters long
# 3. Never commit actual API keys to version control
# 4. Use environment-specific .env files (.env.development, .env.production)
# 5. Rotate secrets regularly in production
# 6. Use strong, unique passwords for Redis
# 7. Enable SSL/TLS in production
# 8. Configure proper firewall rules
# 9. Monitor for suspicious activity
# 10. Keep dependencies updated 